<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/background_grungy_dark"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/half_activity_vertical_margin"
    android:paddingLeft="@dimen/half_activity_vertical_margin"
    android:paddingRight="@dimen/half_activity_vertical_margin"
    android:paddingTop="@dimen/half_activity_vertical_margin">

    <EditText
        android:id="@+id/etSticker"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:focusable="true"
        android:foregroundGravity="center"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/btnFlag"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/quarter_activity_vertical_margin"
        android:layout_marginTop="@dimen/quarter_activity_vertical_margin"
        android:background="@drawable/ic_flag_black" />

    <Button
        android:id="@+id/btnSetAlarm"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/btnFlag"
        android:layout_marginRight="@dimen/quarter_activity_vertical_margin"
        android:background="@drawable/ic_alarm_black_48dp" />

    <LinearLayout
        android:id="@+id/llMainButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSave"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="@dimen/quarter_activity_vertical_margin"
            android:background="@drawable/ic_check_circle_white_48dp" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="@dimen/quarter_activity_vertical_margin"
            android:background="@drawable/ic_delete_white_48dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llStickerSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/llMainButtons"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnOneSecond"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:text="@string/size1.2" />

        <Button
            android:id="@+id/btnOneQuarter"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:text="@string/size1.4" />

        <Button
            android:id="@+id/btnOneEighth"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:text="@string/size1.8" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBtnFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/llStickerSize"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/quarter_activity_vertical_margin"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnTextSize18"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="@string/size18" />

        <Button
            android:id="@+id/btnTextSize24"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="@string/size24" />

        <Button
            android:id="@+id/btnTextSize30"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="@string/size30" />

        <Button
            android:id="@+id/btnTypeface"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="@string/typeface" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBtnColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/llBtnFont"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnColor1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/quarter_activity_vertical_margin"
            android:layout_marginRight="@dimen/quarter_activity_vertical_margin"
            android:layout_marginTop="@dimen/quarter_activity_vertical_margin" />

        <Button
            android:id="@+id/btnColor2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/quarter_activity_vertical_margin"
            android:layout_marginRight="@dimen/quarter_activity_vertical_margin"
            android:layout_marginTop="@dimen/quarter_activity_vertical_margin" />

        <Button
            android:id="@+id/btnColor3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/quarter_activity_vertical_margin"
            android:layout_marginRight="@dimen/quarter_activity_vertical_margin"
            android:layout_marginTop="@dimen/quarter_activity_vertical_margin" />

        <Button
            android:id="@+id/btnColor4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/quarter_activity_vertical_margin"
            android:layout_marginRight="@dimen/quarter_activity_vertical_margin"
            android:layout_marginTop="@dimen/quarter_activity_vertical_margin" />
    </LinearLayout>

</RelativeLayout>
